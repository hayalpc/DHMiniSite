@model List<Post>
@{
    ViewData["Title"] = "Posts";
}

<div class="text-center">
    <div class="row">
        <div class="card-body">
            <a href="/posts/add" class="btn btn-success btn-sm float-right"><i class="fas fa-plus"></i> Add New Post</a>
            <table class="table table-bordered table-hover table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>UserName</th>
                        <th>UserSurname</th>
                        <th>Email</th>
                        <th>CreateTime</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var post in Model)
                        {
                            <tr>
                                <td>@post.Id</td>
                                <td>@post.Title</td>
                                <td>@post.UserName</td>
                                <td>@post.UserSurname</td>
                                <td>@post.Email</td>
                                <td>@post.CreateTime</td>
                                <td>@post.Active</td>
                                <td>
                                    <a class="btn btn-primary btn-sm rounded-circle" data-toggle="tooltip" data-placement="top" title="Edit" href="/posts/edit/@post.Id"><i class="fas fa-pen"></i></a>
                                    @{
                                        if (!post.Active)
                                        {
                                            <a class="btn btn-success btn-sm rounded-circle" data-toggle="tooltip" data-placement="top" title="Active" href="/posts/changeStatus/@post.Id"><i class="fas fa-check"></i></a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-danger btn-sm rounded-circle" data-toggle="tooltip" data-placement="top" title="Active" href="/posts/changeStatus/@post.Id"><i class="fas fa-times"></i></a>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>